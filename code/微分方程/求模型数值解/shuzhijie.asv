subplot(3,1,2)
arrowPlot(x(:,1),x(:,2),'number',3,'scale',0.2)
title('相轨线――感染者与健康者关系')
grid on
subplot(3,1,3)
arrowPlot(x(:,1),x(:,3),'number', 3)
title('相轨线――感染者与过渡者关系')
